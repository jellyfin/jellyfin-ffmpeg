+    r_linx8 = _mm256_fmadd_ps(r_linx8, intermediate_upper_bound, offset);
+    g_linx8 = _mm256_fmadd_ps(g_linx8, intermediate_upper_bound, offset);
+    b_linx8 = _mm256_fmadd_ps(b_linx8, intermediate_upper_bound, offset);
