+    gx8 = _mm256_cvttps_epi32(g_linx8);
+    gx8 = _mm256_min_epi32(gx8, upper_bound);
+    gx8 = _mm256_max_epi32(gx8, zerox8);
+
+    bx8 = _mm256_cvttps_epi32(b_linx8);
+    bx8 = _mm256_min_epi32(bx8, upper_bound);
+    bx8 = _mm256_max_epi32(bx8, zerox8);
